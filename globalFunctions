waitForNetwork()
{
while :;
do
	timeout 5 ping -c1 8.8.8.8 1>/dev/null 2>/dev/null
	if [ $? -eq 0 ]; then
		echo "* Het netwerk is toegankelijk!"
		return 0
	fi

	sleep 1 
done
}

isGitRepoUptodate()
{
if git diff-index --quiet HEAD --; then
	echo "* Installatie up-to-date."
	return 0
else
	echo "* Installatie veroudert..."
	return 1
fi
}
